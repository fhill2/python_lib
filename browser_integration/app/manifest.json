{
  "description": "Native messaging example add-on",
  "manifest_version": 2,
  "name": "Native messaging example",
  "version": "1.0",
  "icons": {
    "48": "icons/message.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "browser_integration@fhill2.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/message.svg"
  },
  "permissions": [
    "nativeMessaging",
    "bookmarks",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "experiment_apis": {
    "tags": {
      "schema": "experiments/tags/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiments/tags/api.js",
        "paths": [["experiments", "tags"]]
      }
    }
  }
}
